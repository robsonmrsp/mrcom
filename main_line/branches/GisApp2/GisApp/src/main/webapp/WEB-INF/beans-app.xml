<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="greetingService" class="com.springteste.impl.GreetingServiceImp">
		<property name="greet" value="Bom dia!!!" />
	</bean>
	<bean id="engrenagem" class="com.teste.veiculo.Engrenagem">
		<property name="rangendo" value="grrrgggrgrggrg" />
	</bean>

	<bean id="caixaMarcha" class="com.teste.veiculo.CaixaMarcha">
		<property name="engrenagem" ref="engrenagem" />
	</bean>
	<bean id="motor" class="com.teste.veiculo.Motor">
		<property name="tipo" value="V8"></property>
	</bean>
	<bean id="carro" class="com.teste.veiculo.Carro">
		<property name="motor" ref="motor"></property>
		<property name="caixaMarcha" ref="caixaMarcha"></property>		
	</bean>	
	<bean id="oficina" class="com.teste.veiculo.Oficina">
		<property name="carro" ref="carro"></property>		
	</bean>
		
</beans>